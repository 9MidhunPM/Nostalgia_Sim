{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build and Run Raylib Game",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-Command",
        "g++ main.cpp -IC:/raylib/include -LC:/raylib/lib -lraylib -lopengl32 -lgdi32 -lwinmm -o main.exe; if ($?) { ./main.exe }"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"],
      "detail": "Compiles and runs Raylib game"
    }
  ]
}
